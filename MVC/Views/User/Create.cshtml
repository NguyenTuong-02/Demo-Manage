@model MVC.Models.User
@{
    ViewData["Title"] = "Home Page";

    Layout = "~/Views/Shared/_Layoutnew.cshtml";
}

<div style="max-width: 40%; margin: 0 auto;">
    <div class="w3-container w3-teal">
        <h2 style="text-align: center;">Đăng nhập</h2>
    </div>
    <form asp-action="Create" class="w3-container w3-card-4 w3-padding w3-center">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="w3-row">
            <div class="w3-col 31">
                <label asp-for="UserName" class="control-label">Tài khoản</label>
                <input asp-for="UserName" class="w3-input w3-border w3-border-blue w3-round" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="w3-row">
            <div class="w3-col 31">
                <label asp-for="PassWord" class="control-label">Mật khẩu</label>
                <input asp-for="PassWord" type="password" class="w3-input w3-border w3-border-blue w3-round" />
                <span asp-validation-for="PassWord" class="text-danger"></span>
            </div>
        </div>
        <div class="w3-row">
            <div class="w3-col 31">
                <label asp-for="Name" class="control-label">Họ và tên</label>
                <input asp-for="Name" class="w3-input w3-border w3-border-blue w3-round" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="w3-row">
            <div class="w3-col 31">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="w3-input w3-border w3-border-blue w3-round" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="w3-margin-top">
            <a asp-action="Index" class="w3-btn w3-green w3-round">Quay lại</a>
            <input type="submit" value="Tạo mới" class="w3-btn w3-blue w3-right w3-round w3-card-4" />
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}